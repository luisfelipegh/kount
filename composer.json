{
  "name": "placetopay/kount",
  "description": "A SDK to connect with Kount security services",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Diego Calle",
      "email": "dnetix@gmail.com"
    }
  ],
  "archive": {
    "exclude": [
      ".git",
      ".gitignore"
    ]
  },
  "autoload": {
    "psr-4": {
      "PlacetoPay\\Kount\\": "src/"
    }
  },
  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "friendsofphp/php-cs-fixer": "^3.49",
    "symfony/var-dumper": "^6.4"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpcs": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php",
    "phpunit": "vendor/bin/phpunit --configuration phpunit.xml --testdox",
    "test": [
      "@phpcs",
      "@phpunit"
    ]
  }
}
